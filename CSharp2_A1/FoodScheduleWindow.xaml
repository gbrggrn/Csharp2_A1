<Window x:Class="Csharp2_A1.FoodScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csharp2_A1"
        mc:Ignorable="d"
        Title="FoodScheduleWindow" Height="500" Width="350">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="FontFamily" Value="Courier new"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid Background="#D2B48C">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Label Grid.Row="0" x:Name="scheduleHeaderLabel" Content="Food Schedule" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
        
        <!-- Exit Button -->
        <Border Grid.Row="0" Margin="0,0,25,0" HorizontalAlignment="Right" CornerRadius="10" Width="75" Background="#A0522D" Height="30">
            <Button x:Name="exitButton" Content="Exit" Height="30" VerticalAlignment="Top" Click="exitButton_Click"/>
        </Border>

        <!-- Listbox Label -->
        <Label Grid.Row="1" x:Name="scheduleItemsHeaderLabel" Content="Food Schedule Items" VerticalAlignment="Bottom" Margin="10,0,0,0"/>

        <!-- Listbox -->
        <ListBox Grid.Row="2" x:Name="scheduleItemsListBox" Margin="10"/>
        
        <!-- Control Buttons-->
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Border">
                    <Setter Property="Margin" Value="25,0,10,0"/>
                </Style>
            </StackPanel.Resources>
            <Border CornerRadius="10" Width="75" Background="#A0522D" Height="30">
                <Button x:Name="addButton" Content="+ Add" Height="30" VerticalAlignment="Top"/>
            </Border>
            <Border CornerRadius="10" Width="75" Background="#A0522D" Height="30">
                <Button x:Name="editButton" Content="Edit" Height="30" VerticalAlignment="Top"/>
            </Border>
            <Border CornerRadius="10" Width="75" Background="#A0522D" Height="30">
                <Button x:Name="deleteButton" Content="Delete" Height="30" VerticalAlignment="Top"/>
            </Border>
        </StackPanel>
      
    </Grid>
</Window>
